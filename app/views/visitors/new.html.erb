<% content_for :title do %> Rails Bootstrap <% end %>
<% content_for :description do %> Rails Bootstrap Example <% end %>
<div id="myCarousel" class="carousel slide" data-ride="carousel">
	<ol class = "carousel-indicators">
		<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
		<li data-target="#myCarousel" data-slide-to="1"></li>
		<li data-target="#myCarousel" data-slide-to="2"></li>
		<li data-target="#myCarousel" data-slide-to="3"></li>
		<li data-target="#myCarousel" data-slide-to="4"></li>
	</ol>
	<div class="carousel-inner">
		<div class="item active">
			<img src="http://lorempixel.com/1170/800/cats/9" class="img_scale">
			<div class="carousel-caption text-center">
				<h4><%= Visitor::IMAGE_LABELS[0] %></h4>
			</div>
		</div>
		<div class="item">
			<img src="http://lorempixel.com/1170/800/cats/7" class="img_scale">
			<div class="carousel-caption text-center">
				<h4><%= Visitor::IMAGE_LABELS[1] %></h4>
			</div>
		</div>
		<div class="item">
			<img src="http://lorempixel.com/1170/800/cats/3" class="img_scale">
			<div class="carousel-caption text-center">
				<h4><%= Visitor::IMAGE_LABELS[2] %></h4>
			</div>
		</div>
		<div class="item">
			<img src="http://lorempixel.com/1170/800/cats/5" class="img_scale">
			<div class="carousel-caption text-center">
				<h4><%= Visitor::IMAGE_LABELS[3] %></h4>
			</div>
		</div>
		<div class="item">
			<%= image_tag "coco1.jpeg", :class => "img_scale" %>
			<div class="carousel-caption text-center">
				<h4><%= Visitor::IMAGE_LABELS[4] %></h4>
			</div>
		</div>
	</div>
	<a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
	<a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
</div>
<div class="text-center"> <!-- see comment below breaking down SimpleForm code -->
	<br />
	<div id="modal-form" class="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: <%= @visitor.errors.any? ? 'block' : 'none';%>" >
		<div class="modal-dialog">
			<div class="modal-content">
				<%= simple_form_for @visitor do |f| %>
					<div class="modal-header">
						<a class="close" data-dismiss="moddal" href=".">&#215;</a>
						<h4>Select a kitty</h4>
					</div>
					<div class="modal-body">
						<div class="container">
							<div class="row">
								<div class="col-md-4 col-md-offset-1 simpleformtext">
									<%= f.error_notification %>
									<%= f.input :favorite, :collection => Visitor::IMAGE_LABELS, label: false, as: :select, prompt: 'Select a favorite...', :input_html => {:style => "width: 200px"} %>
								</div>
							</div>
							<br>
							<div class="row">
								<div class="col-md-4 col-md-offset-1">
									<%= f.input :comment, label: false, :placeholder => 'Add a comment...', :class => "col-md-12", :input_html => {:style => "width: 200px"} %>
								</div>
							</div>
						</div>
					</div>
					<div class="modal-footer"> 
						<%= f.submit "Choose!", :class => "btn btn-primary btn-lg" %>
						<a class="btn" data-dismiss="modal" href=".">Close</a>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div id="call-to-action">
		<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" href="#modal-form">Choose!</button>
	</div>
</div>